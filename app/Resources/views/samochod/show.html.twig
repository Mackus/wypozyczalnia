{% block body %}
    <h1>Samochod</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ samochod.id }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ samochod.nazwa }}</td>
            </tr>
            <tr>
                <th>Opis</th>
                <td>{{ samochod.opis }}</td>
            </tr>
            <tr>
                <th>Rokprodukcji</th>
                <td>{{ samochod.rokProdukcji }}</td>
            </tr>
            <tr>
